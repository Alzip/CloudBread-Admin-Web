<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        New Coupon
        <small>Create a new Coupon</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{{url 'coupon'}}}">List</a></li>
        <li class="active">New Coupon</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Input addon -->
            <!-- form -->
            <form action="{{{url 'coupon.store'}}}" method="post">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Coupon Basic Info</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[CouponID]" placeholder="Coupon ID"
                               required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[CouponCategory1]" placeholder="Category 1"/>
                        <input type="text" class="form-control" name="coupon[CouponCategory2]" placeholder="Category 2"/>
                        <input type="text" class="form-control" name="coupon[CouponCategory3]" placeholder="Category 3"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[ItemListID]" placeholder="ItemListID" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[ItemCount]" placeholder="ItemCount"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[ItemStatus]" placeholder="ItemStatus"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[TargetGroup]" placeholder="TargetGroup"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[TargetOS]" placeholder="TargetOS"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[TargetDevice]" placeholder="TargetDevice"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[Title]" placeholder="Title" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[Content]" placeholder="Content"></textarea>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Extra Data</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol1]" placeholder="sCol1"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol2]" placeholder="sCol2"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol3]" placeholder="sCol3"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol4]" placeholder="sCol4"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol5]" placeholder="sCol5"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol6]" placeholder="sCol6"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol7]" placeholder="sCol7"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol8]" placeholder="sCol8"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol9]" placeholder="sCol9"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="coupon[sCol10]" placeholder="sCol10"></textarea>
                    </div>
                </div>
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Coupon Time Info</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[CouponDurationFrom]" placeholder="CouponDurationFrom" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[CouponDurationTo]" placeholder="CouponDurationTo" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="coupon[OrderNumber]" placeholder="OrderNumber" required/>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="coupon[DupeYN]" class="minimal" value="Y" checked> Dupe Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="coupon[DupeYN]" class="minimal" value="N" > Dupe No
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="coupon[HideYN]" class="minimal" value="Y" checked> Hide Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="coupon[HideYN]" class="minimal" value="N" > Hide No
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="coupon[DeleteYN]" class="minimal" value="Y" checked> Delete  Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="coupon[DeleteYN]" class="minimal" value="N" > Delete No
                        </label>
                    </div>
                </div>
            </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" onclick="location.href = '{{{url "coupon"}}}'">
                        Cancel
                    </button>
                </div>
                <!-- /.box-footer -->
            </form>
            <!-- /form -->
            <!-- /.box -->
        </div>
        <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
</section>
<!-- /.section -->
