{{#extend 'styles'}}
    <style>
        .error {
            color: red;
        }
        .success {
            color:green;
        }
    </style>
{{/extend}}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        List Coupon
        <small>All coupon listed</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            {{#if message}}
                {{{message}}}
            {{/if}}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">All coupon</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="table-search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default search"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>CouponID</th>
                            <th>CouponCategory</th>
                            <th>ItemListId</th>
                            <th>ItemCount</th>
                            <th>TargetGroup</th>
                            <th>Title</th>
                            <th>CreatedAt</th>
                        </tr>
                        {{#each listObjs }}
                            <tr>
                                <td>
                                    <a href="/coupon/{{this.CouponID }}"> {{this.CouponID }} </a>
                                </td>
                                <td>
                                    {{this.CouponCategory1}}
                                </td>
                                <td>{{this.ItemListID}}</td>
                                <td>{{this.ItemCount}}</td>
                                <td>{{this.TargetGroup}}</td>
                                <td>{{this.Title}}</td>
                                <td>{{this.createdAt}}</td>
                            </tr>
                        {{/each}}
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        {{{ pagination page count }}}
                    </ul>
                    <button type="button" class="btn btn-primary" onclick="location.href = '{{{url "coupon.create"}}}'">Create New Coupon</button>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>
