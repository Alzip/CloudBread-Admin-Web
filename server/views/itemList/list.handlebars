{{#extend 'styles'}}
    <style>
        .error {
            color: red;
        }
        .success {
            color:green;
        }
    </style>
{{/extend}}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        List ItemList
        <small>All ItemList listed</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            {{#if message}}
                {{{message}}}
            {{/if}}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">All ItemList</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="table-search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default search"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>ItemListID</th>
                            <th>ItemName</th>
                            <th>ItemPrice</th>
                            <th>ItemSellPrice</th>
                            <th>ItemCategory1</th>
                            <th>ItemCategory2</th>
                            <th>ItemCategory3</th>
                            <th>CreatedAt</th>
                        </tr>
                        {{#each listObjs }}
                            <tr>
                                <td>
                                    <a href="/itemList/{{this.ItemListID}}"> {{this.ItemListID}} </a>
                                </td>
                                <td> {{this.ItemName}} </td>
                                <td> {{this.ItemPrice}} </td>
                                <td> {{this.ItemSellPrice}} </td>
                                <td> {{this.ItemCategory1}} </td>
                                <td> {{this.ItemCategory2}} </td>
                                <td> {{this.ItemCategory3}} </td>
                                <td>{{this.createdAt}}</td>
                            </tr>
                        {{/each}}
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="button" class="btn btn-primary" onclick="location.href = '{{{url "itemList.create"}}}'">Create Item List</button>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>
