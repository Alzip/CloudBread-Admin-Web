<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit Stat Data
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{{url 'statsData'}}}">List</a></li>
        <li class="active">Edit Stat Data</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Input addon -->
            <!-- form -->
            <form action="{{{url 'statsData.update'}}}" method="post">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Basic Info</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="statData[StatID]" value="{{ obj.StatID}}" placeholder="StatID" readonly/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="statData[CategoryName]" value="{{ obj.CategoryName}}" placeholder="CategoryName" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="statData[CountNum]" value="{{ obj.CountNum}}" placeholder="CountNum" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="statData[Fields]" value="{{ obj.Fields}}" placeholder="Fields" required/>
                    </div>
                </div>
            </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" onclick="location.href = '{{{url "statsData"}}}'">
                        Cancel
                    </button>
                    <button type="button" class="btn pull-right btn-warning" onclick="location.href = '{{url "statsData"  }}/delete/{{obj.StatID}}'">
                        Delete
                    </button>
                </div>
                <!-- /.box-footer -->
            </form>
            <!-- /form -->
            <!-- /.box -->
        </div>
        <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
</section>
<!-- /.section -->
