<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        New Game Event 
        <small>Create a new game event </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{{url 'gameEvent'}}}">List</a></li>
        <li class="active">New Game Event </li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Input addon -->
            <!-- form -->
            <form action="{{{url 'gameEvent.store'}}}" method="post">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Game Event Basic Info</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[GameEventID]" placeholder="GameEventID"
                                   required/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[EventCategory1]" placeholder="EventCategory1" required/>
                            <input type="text" class="form-control" name="gameEvent[EventCategory2]" placeholder="EventCategory2"/>
                            <input type="text" class="form-control" name="gameEvent[EventCategory3]" placeholder="EventCategory3"/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[ItemListID]" placeholder="ItemListID" required/>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Item Info</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[ItemCount]" placeholder="ItemCount" required/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[ItemStatus]" placeholder="ItemStatus"/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[TargetGroup]" placeholder="TargetGroup"/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[TargetOS]" placeholder="TargetOS"/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[TargetDevice]" placeholder="TargetDevice"/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[EventImageLink]" placeholder="EventImageLink"/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[Title]" placeholder="Title" required/>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" name="gameEvent[Content]" placeholder="Content" required/>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Extra Data</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol1]" placeholder="sCol1"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol2]" placeholder="sCol2"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol3]" placeholder="sCol3"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol4]" placeholder="sCol4"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol5]" placeholder="sCol5"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol6]" placeholder="sCol6"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol7]" placeholder="sCol7"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol8]" placeholder="sCol8"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol9]" placeholder="sCol9"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="gameEvent[sCol10]" placeholder="sCol10"></textarea>
                    </div>
                </div>
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Access</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label>
                            <input type="radio" name="gameEvent[HideYN]"  value="Y" class="minimal" checked> Hide Yes
                        </label>
                        &nbsp;
                        <label>
                             <input type="radio" name="gameEvent[HideYN]"  value="N" class="minimal"> Hide No
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="gameEvent[DeleteYN]"  value="Y" class="minimal" checked> Delete  Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="gameEvent[DeleteYN]"  value="N" class="minimal"> Delete No
                        </label>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="gameEvent[OrderNumber]" placeholder="OrderNumber" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="gameEvent[EventDurationFrom]" placeholder="EventDurationFrom" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="gameEvent[EventDurationTo]" placeholder="EventDurationTo" required/>
                    </div>
                </div>
            </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" onclick="location.href = '{{{url "gameEvent"}}}'">
                        Cancel
                    </button>
                </div>
                <!-- /.box-footer -->
            </form>
            <!-- /form -->
            <!-- /.box -->
        </div>
        <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
</section>
<!-- /.section -->
