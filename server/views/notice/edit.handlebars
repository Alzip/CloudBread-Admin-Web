<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        New Notice
        <small>Create a Notice</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{{url 'notice'}}}">List</a></li>
        <li class="active">New Notice</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Input addon -->
            <!-- form -->
            <form action="{{{url 'notice.update'}}}" method="post">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Basic Info</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeID]" value="{{ obj.NoticeID}}" placeholder="NoticeID" readonly/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeCategory1]" value="{{ obj.NoticeCategory1}}" placeholder="NoticeCategory1" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeCategory2]" value="{{ obj.NoticeCategory2}}" placeholder="NoticeCategory2"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeCategory3]" value="{{ obj.NoticeCategory3}}" placeholder="NoticeCategory3"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[TargetGroup]" value="{{ obj.TargetGroup}}" placeholder="TargetGroup" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[TargetOS]" value="{{ obj.TargetOS}}" placeholder="TargetOS" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[TargetDevice]" value="{{ obj.TargetDevice}}" placeholder="TargetDevice" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeImageLink]" value="{{ obj.NoticeImageLink}}" placeholder="NoticeImageLink"/>
                    </div>
                </div>
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Content</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[Title]" value="{{ obj.Title}}" placeholder="Title" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[Content]" placeholder="content">{{ obj.Content}}</textarea>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Extra Data</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol1]" placeholder="sCol1">{{ obj.sCol1}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol2]" placeholder="sCol2">{{ obj.sCol2}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol3]" placeholder="sCol3">{{ obj.sCol3}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol4]" placeholder="sCol4">{{ obj.sCol4}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol5]" placeholder="sCol5">{{ obj.sCol5}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol6]" placeholder="sCol6">{{ obj.sCol6}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol7]" placeholder="sCol7">{{ obj.sCol7}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol8]" placeholder="sCol8">{{ obj.sCol8}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol9]" placeholder="sCol9">{{ obj.sCol9}}</textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol10]" placeholder="sCol10">{{ obj.sCol10}}</textarea>
                    </div>
                </div>
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Access</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control datetimepicker" name="notice[NoticeDurationFrom]" value="{{ obj.NoticeDurationFrom}}" placeholder="NoticeDurationFrom" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control datetimepicker" name="notice[NoticeDurationTo]" value="{{ obj.NoticeDurationTo}}" placeholder="NoticeDurationTo" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[OrderNumber]" value="{{ obj.OrderNumber}}" placeholder="OrderNumber" required/>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="notice[HideYN]" class="minimal" value="Y"
                                {{#isYes obj.HideYN}} {{/isYes}}
                            > Hide Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="notice[HideYN]" class="minimal" value="N"
                                {{#isNo obj.HideYN}} {{/isNo}}
                            > Hide No
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="notice[DeleteYN]" class="minimal" value="Y"
                                {{#isYes obj.DeleteYN}} {{/isYes}}
                            > Delete  Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="notice[DeleteYN]" class="minimal" value="N"
                                {{#isNo obj.DeleteYN}} {{/isNo}}
                            > Delete No
                        </label>
                    </div>
                </div>
            </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" onclick="location.href = '{{{url "notice.store"}}}'">
                        Cancel
                    </button>
                </div>
                <!-- /.box-footer -->
            </form>
            <!-- /form -->
            <!-- /.box -->
        </div>
        <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
</section>
<!-- /.section -->
