<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        New Notice
        <small>Create a Notice</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{{url 'home'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{{url 'notice'}}}">List</a></li>
        <li class="active">New Notice</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Input addon -->
            <!-- form -->
            <form action="{{{url 'notice.store'}}}" method="post">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Basic Info</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeID]" placeholder="NoticeID" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeCategory1]" placeholder="NoticeCategory1" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeCategory2]" placeholder="NoticeCategory2"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeCategory3]" placeholder="NoticeCategory3"/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[TargetGroup]" placeholder="TargetGroup" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[TargetOS]" placeholder="TargetOS" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[TargetDevice]" placeholder="TargetDevice" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[NoticeImageLink]" placeholder="NoticeImageLink"/>
                    </div>
                </div>
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Content</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[Title]" placeholder="Title" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[Content]" placeholder="content"></textarea>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Extra Data</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol1]" placeholder="sCol1"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol2]" placeholder="sCol2"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol3]" placeholder="sCol3"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol4]" placeholder="sCol4"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol5]" placeholder="sCol5"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol6]" placeholder="sCol6"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol7]" placeholder="sCol7"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol8]" placeholder="sCol8"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol9]" placeholder="sCol9"></textarea>
                    </div>
                    <div class="form-group has-feedback">
                        <textarea class="form-control" name="notice[sCol10]" placeholder="sCol10"></textarea>
                    </div>
                </div>
            </div>
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Access</h3>
                </div>
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control datetimepicker" name="notice[NoticeDurationFrom]" placeholder="NoticeDurationFrom" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control datetimepicker" name="notice[NoticeDurationTo]" placeholder="NoticeDurationTo" required/>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" name="notice[OrderNumber]" placeholder="OrderNumber" required/>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="notice[HideYN]" value="Y" class="minimal" checked> Hide Yes
                        </label>
                        &nbsp;
                        <label>
                             <input type="radio" name="notice[HideYN]" value="N" class="minimal"> Hide No
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="notice[DeleteYN]" value="Y" class="minimal" checked> Delete  Yes
                        </label>
                        &nbsp;
                        <label>
                            <input type="radio" name="notice[DeleteYN]" value="N" class="minimal"> Delete No
                        </label>
                    </div>
                </div>
            </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" onclick="location.href = '{{{url "notice"}}}'">
                        Cancel
                    </button>
                </div>
                <!-- /.box-footer -->
            </form>
            <!-- /form -->
            <!-- /.box -->
        </div>
        <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
</section>
<!-- /.section -->
